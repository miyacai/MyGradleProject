<?xml version="1.0" encoding="UTF-8"?>
<Configuration name = "log4j2-myProject">
	<properties>
		<property name="LOG_HOME">/Users/micai/Desktop</property>
		<property name="FILE_NAME">mylog</property>
	</properties>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

		<RollingFile name="running-log"
			fileName="${LOG_HOME}/${FILE_NAME}.log"
			filePattern="${LOG_HOME}/$${date:yyyy-MM}/${FILE_NAME}-%d{yyyy-MM-dd}-%i.log.gz">
			<PatternLayout
				pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} %level [%thread][%file:%line] - %msg%n" />
			<Policies>
				 <TimeBasedTriggeringPolicy interval="1"
                    modulate="true" />
			</Policies>
		</RollingFile>
		
		<RollingFile name="access-log"
			fileName="/Users/micai/Desktop/access.log"
			filePattern="${LOG_HOME}/$${date:yyyy-MM}/${FILE_NAME}-%d{yyyy-MM-dd}-%i.log.gz">
			<PatternLayout
				pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} %level [%thread][%file:%line] - %msg%n" />
			<Policies>
				 <TimeBasedTriggeringPolicy interval="1"
                    modulate="true" />
			</Policies>
		</RollingFile>
		
	</Appenders>
	
	<Loggers>
		<Logger name="org.gradle" level="trace"
			additivity="true">
			<AppenderRef ref="running-log" />
		</Logger>
		<Logger name="MyAccessLog" level="info"
			additivity="false">
			<AppenderRef ref="access-log" />
		</Logger>
		<Root level="warn">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>